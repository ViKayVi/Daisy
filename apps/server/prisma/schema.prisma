generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  username String
  email    String  @unique
  petals   Petal[]
}

model Petal {
  id              String   @id @default(uuid())
  user_id         String?
  created_at      DateTime @default(now())
  day_of_week     String
  time_of_day     String
  current_emotion String
  desired_emotion String
  audio_seed      String?
  visual_seed     String?
  color_palette   String?
  info            String?
  text            String?
  user            User?    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}
